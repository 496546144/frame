<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ashlikun.supertoobar.SuperToolBar
        android:id="@+id/toolBar"
        style="@style/SuperToolBar.Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:stb_title="我是少我是少我是少我是少我是少我是少">


    </com.ashlikun.supertoobar.SuperToolBar>

    <com.ashlikun.flatbutton.FlatButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionButton"
        android:clickable="false"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="重新加载"
        android:textColor="#ffff0000"
        app:clickDelay="200"
        app:colorPressed="#ffaaaaaa"
        app:colorPressedText="@color/black"
        app:cornerRadius="10dp"
        app:strokeColor="@color/red"
        app:strokeWidth="2dp"></com.ashlikun.flatbutton.FlatButton>


    <com.ashlikun.animcheckbox.AnimCheckBox
        style="@style/AnimCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ab_circleColor="@color/white"
        app:ab_isCircle="false"
        app:ab_noSelectStrokeColor="@color/gray_66"
        app:ab_selectStrokeColor="@color/red"
        app:ab_strokeWidth="@dimen/dp_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:onClick="onStickClick"
            android:text="stick" />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:text="onClick" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


</LinearLayout>
